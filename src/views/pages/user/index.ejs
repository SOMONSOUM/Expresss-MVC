<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head.ejs'); %>
  </head>
  <body>
    <div class="container py-3">
      <header><%- include('../../partials/header.ejs') %></header>
      <div class="row">
        <div class="col-6">
          <h1>Users</h1>
        </div>
        <div class="col-6 d-flex justify-content-end">
          <a href="/newuser" type="button" class="btn btn-primary align-self-center">Add user</a>
        </div>
      </div>
      
      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col" class="text-end">Action</th>
          </tr>
        </thead>
        <tbody>
      
          <% users.forEach(function(user) { %>
          <tr>
            <th scope="row"><%= user.id  %></th>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td class="text-end">
              <a href="/user/<%= user.id %>" type="button" class="btn btn-success btn-small">View</a>
              <a href="/edit/<%= user.id %>" type="button" class="btn btn-warning btn-small">Edit</a>
              <a href="/delete/<%= user.id %>" type="button" class="btn btn-danger btn-small">Delete</a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <footer class="pt-4 my-md-5 pt-md-5 border-top">
        <%- include('../../partials/footer'); %>
      </footer>
    </div>
  </body>
</html>